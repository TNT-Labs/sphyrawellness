# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@sphyrawellness.com
SENDGRID_FROM_NAME="Sphyra Wellness Lab"

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# CouchDB Configuration (if using remote sync)
COUCHDB_URL=http://localhost:5984
COUCHDB_USERNAME=admin
COUCHDB_PASSWORD=password

# Reminder Configuration
REMINDER_SEND_HOUR=10
REMINDER_SEND_MINUTE=0

# SMS Gateway Configuration (Smartphone-based)
# Use capcom6/android-sms-gateway app on an Android smartphone
# See docs/SMS_GATEWAY_SETUP.md for complete setup instructions
SMS_GATEWAY_URL=http://192.168.1.100:8080
SMS_GATEWAY_TOKEN=admin:your-secure-password
SMS_GATEWAY_PHONE=+393331234567

# JWT Secret (REQUIRED for authentication)
# Generate with: openssl rand -base64 32
# IMPORTANT: Never commit your actual JWT_SECRET to version control
JWT_SECRET=your_jwt_secret_here

# Default Admin Password (for database reset)
# This password will be used when creating the default admin user
# IMPORTANT: Change this in production
ADMIN_DEFAULT_PASSWORD=AdminSphyra2024!

# Production example:
# .env.production
# ALLOWED_ORIGINS=https://tnt-labs.github.io,https://yourdomain.com
