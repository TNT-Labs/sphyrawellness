{
  "name": "sphyra-wellness-pwa",
  "version": "1.0.0",
  "description": "PWA per la gestione di centri estetici",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run generate:version && tsc && vite build",
    "preview": "vite preview",
    "generate:version": "node scripts/generate-version.js",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 100",
    "lint:fix": "eslint . --fix",
    "lint:strict": "eslint . --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "setup-couchdb": "node scripts/setup-couchdb.js"
  },
  "dependencies": {
    "date-fns": "^3.6.0",
    "idb": "^8.0.3",
    "lucide-react": "^0.441.0",
    "pouchdb-browser": "^9.0.0",
    "pouchdb-find": "^9.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/pouchdb-browser": "^6.1.5",
    "@types/pouchdb-find": "^7.3.3",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^4.0.15",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.39.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.2.0",
    "postcss": "^8.4.45",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.15.0",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.15"
  }
}
